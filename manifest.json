{
	"connections": [
		{
			"host": "127.0.0.1",
			"labels": ["api"]
		},
		{
			"host": "127.0.0.1",
			"labels": ["websocket"]
		}
	],
	"registrations": [
		{
			"plugin": {
				"register": "hapi-ioredis",
				"options": {
					"port": "6379",
					"url": "127.0.0.1",
